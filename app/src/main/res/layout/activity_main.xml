<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start" />

        <TextView
            android:id="@+id/title_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:text="@string/tt_nth_character_request_result"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_0"
            android:layout_margin="@dimen/margin_normal"
            android:background="@color/green"
            android:minHeight="@dimen/textview_min_height"
            android:padding="@dimen/margin_normal"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress_0"
            android:layout_width="@dimen/progress_diameter"
            android:layout_height="@dimen/progress_diameter"
            android:layout_alignTop="@+id/text_0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_0"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/tt_every_nth_character_request_result"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_1"
            android:layout_margin="@dimen/margin_normal"
            android:background="@color/green"
            android:minHeight="@dimen/textview_min_height"
            android:padding="@dimen/margin_normal"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress_1"
            android:layout_width="@dimen/progress_diameter"
            android:layout_height="@dimen/progress_diameter"
            android:layout_alignTop="@+id/text_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_1"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/tt_word_counter_request_result"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_2"
            android:layout_margin="@dimen/margin_normal"
            android:background="@color/green"
            android:minHeight="@dimen/textview_min_height"
            android:padding="@dimen/margin_normal"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_2"
            android:layout_width="@dimen/progress_diameter"
            android:layout_height="@dimen/progress_diameter"
            android:layout_alignTop="@+id/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:visibility="gone" />


    </RelativeLayout>
</ScrollView>
